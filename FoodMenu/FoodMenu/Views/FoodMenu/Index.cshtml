@model List<FoodMenu.Models.Dish>
@{
    ViewData["Title"] = "FoodMenuIndex";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            ;
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width: 75%" />
                </div>
                <div class="d-flex justify-content-center">
                    <p>@item.Price.ToString("C2") Czk </p>
                </div>
            </div>
        }
    </div>
</div>
